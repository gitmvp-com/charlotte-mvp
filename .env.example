# CHARLOTTE MVP - Environment Configuration Example
# Copy this file to .env and fill in your values

# LLM Provider (openai, huggingface, local)
LLM_PROVIDER=local

# OpenAI Settings (if using OpenAI)
# OPENAI_API_KEY=your_key_here
# OPENAI_MODEL=gpt-4

# HuggingFace Settings
HUGGINGFACE_MODEL=microsoft/codebert-base

# Code Reasoner
CODE_REASONER_MODEL=microsoft/codebert-base
CODE_REASONER_DEVICE=auto
CODE_REASONER_MAX_LENGTH=512

# Scanning
SCAN_RECURSIVE=true
SCAN_MAX_FILES=1000

# Output
CHARLOTTE_VERBOSE=true
CHARLOTTE_SAVE_RESULTS=true
